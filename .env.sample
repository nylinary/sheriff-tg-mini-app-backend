# Telegram bot token
BOT_TOKEN=123456:ABCDEF

# PostgreSQL (async DSN for app runtime)
POSTGRES_DSN=postgresql+asyncpg://postgres:postgres@localhost:5432/postgres

# initData max age in seconds
INITDATA_MAX_AGE_SECONDS=300

# JWT auth
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_TTL_SECONDS=900
REFRESH_TOKEN_TTL_SECONDS=2592000

# Cookies
# For local dev (http://localhost) set COOKIE_SECURE=false
COOKIE_SECURE=true
# For TG webview + cross-site cookies, usually need SameSite=None
COOKIE_SAMESITE=none

# Webhook forwarding (optional)
# If set, POST /leads will forward the enriched JSON payload to this URL.
LEAD_WEBHOOK_URL=
